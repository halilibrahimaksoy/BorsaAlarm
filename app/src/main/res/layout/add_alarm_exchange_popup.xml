<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/txtAlarmCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="AKBANK"
        android:textColor="@color/textColorPrimary"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Minimum Değer :"
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtAlarmMinValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccent"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/textColorPrimary"
            android:textCursorDrawable="@android:drawable/dark_header"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺"
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtAlarmActiveValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺"
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Maximum Değer :"
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/edtAlarmMaxValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:background="@color/colorAccent"
            android:cursorVisible="true"
            android:gravity="center"

            android:inputType="number"
            android:maxLength="4"
            android:textColor="@color/textColorPrimary"
            android:textCursorDrawable="@android:drawable/dark_header"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₺"
            android:textColor="@color/textColorPrimary"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>