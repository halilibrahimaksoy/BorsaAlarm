<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/exchange_list_item_shape">

    <TextView
        android:id="@+id/txtAlarmedExchangeName"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:text="ADEL"
        android:textColor="@color/textColorPrimary"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/txtAlarmedExchangeMin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtAlarmedExchangeName"
        android:layout_toEndOf="@id/txtAlarmedExchangeName"
        android:layout_toRightOf="@id/txtAlarmedExchangeName"
        android:text="Min :"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtAlarmedExchangeMinValue"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtAlarmedExchangeMin"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/txtAlarmedExchangeMin"
        android:layout_toRightOf="@id/txtAlarmedExchangeMin"
        android:gravity="center"
        android:text="99.0"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtAlarmedExchangeMinValueRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtAlarmedExchangeMinValue"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@id/txtAlarmedExchangeMinValue"
        android:layout_toRightOf="@id/txtAlarmedExchangeMinValue"
        android:text="₺"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtAlarmedExchangeMax"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtAlarmedExchangeMinValueRight"
        android:layout_toEndOf="@id/txtAlarmedExchangeMinValueRight"
        android:layout_toRightOf="@id/txtAlarmedExchangeMinValueRight"
        android:text="Max :"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtAlarmedExchangeMaxValue"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtAlarmedExchangeMax"
        android:layout_marginRight="5dp"
        android:layout_toEndOf="@id/txtAlarmedExchangeMax"
        android:layout_toRightOf="@id/txtAlarmedExchangeMax"
        android:gravity="center"
        android:text="99.0"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/txtAlarmedExchangeMaxValueRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/txtAlarmedExchangeMaxValue"
        android:layout_marginRight="20dp"
        android:layout_toEndOf="@id/txtAlarmedExchangeMaxValue"
        android:layout_toRightOf="@id/txtAlarmedExchangeMaxValue"
        android:text="₺"
        android:textColor="@color/textColorPrimary"
        android:textSize="18dp" />

</RelativeLayout>